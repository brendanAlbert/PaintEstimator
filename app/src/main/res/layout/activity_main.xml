<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.orangecoastcollege.cs273.balbert.paintestimator.MainActivity"
    android:background="@drawable/paintbackground">


    <TextView
        android:id="@+id/paintEstimatorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/enterDimensionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/paintEstimatorTextView"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:text="@string/enter_dimensions" />

    <TextView
        android:id="@+id/lengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterDimensionsTextView"
        android:layout_alignStart="@+id/enterDimensionsTextView"
        android:layout_alignLeft="@+id/enterDimensionsTextView"
        android:layout_marginTop="25dp"
        android:textSize="14sp"
        android:text="@string/length" />

    <EditText
        android:id="@+id/lengthEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterDimensionsTextView"
        android:layout_alignEnd="@+id/enterDimensionsTextView"
        android:layout_alignRight="@+id/enterDimensionsTextView"
        android:layout_alignBaseline="@id/lengthTextView"
        android:textSize="16sp"
        android:gravity="center"
        android:ems="8"
        android:inputType="number" />

    <TextView
        android:id="@+id/widthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lengthTextView"
        android:layout_alignStart="@+id/enterDimensionsTextView"
        android:layout_alignLeft="@+id/enterDimensionsTextView"
        android:layout_marginTop="25dp"
        android:textSize="14sp"
        android:text="@string/width" />

    <EditText
        android:id="@+id/widthEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lengthEditText"
        android:layout_alignEnd="@+id/enterDimensionsTextView"
        android:layout_alignRight="@+id/enterDimensionsTextView"
        android:layout_alignBaseline="@id/widthTextView"
        android:textSize="16sp"
        android:gravity="center"
        android:ems="8"
        android:inputType="number"/>

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widthTextView"
        android:layout_alignStart="@+id/enterDimensionsTextView"
        android:layout_alignLeft="@+id/enterDimensionsTextView"
        android:layout_marginTop="25dp"
        android:textSize="14sp"
        android:text="@string/height" />

    <EditText
        android:id="@+id/heightEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widthEditText"
        android:layout_alignEnd="@+id/enterDimensionsTextView"
        android:layout_alignRight="@+id/enterDimensionsTextView"
        android:layout_alignBaseline="@id/heightTextView"
        android:textSize="16sp"
        android:ems="8"
        android:gravity="center"
        android:inputType="number"/>

    <TextView
        android:id="@+id/howManyDoorsWindowsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/heightTextView"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:text="@string/enter_door_window" />

    <TextView
        android:id="@+id/doorsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/howManyDoorsWindowsTextView"
        android:layout_alignStart="@+id/enterDimensionsTextView"
        android:layout_alignLeft="@+id/enterDimensionsTextView"
        android:layout_marginTop="25dp"
        android:textSize="14sp"
        android:text="@string/doors" />

    <EditText
        android:id="@+id/doorsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/howManyDoorsWindowsTextView"
        android:layout_alignEnd="@+id/enterDimensionsTextView"
        android:layout_alignRight="@+id/enterDimensionsTextView"
        android:layout_alignBaseline="@id/doorsTextView"
        android:textSize="16sp"
        android:gravity="center"
        android:ems="8"
        android:inputType="number"/>

    <TextView
        android:id="@+id/windowsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doorsTextView"
        android:layout_alignStart="@+id/enterDimensionsTextView"
        android:layout_alignLeft="@+id/enterDimensionsTextView"
        android:layout_marginTop="25dp"
        android:textSize="14sp"
        android:text="@string/windows" />

    <EditText
        android:id="@+id/windowsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doorsEditText"
        android:layout_alignEnd="@+id/enterDimensionsTextView"
        android:layout_alignRight="@+id/enterDimensionsTextView"
        android:layout_alignBaseline="@id/windowsTextView"
        android:textSize="16sp"
        android:gravity="center"
        android:ems="8"
        android:inputType="number"/>

    <Button
        android:id="@+id/computeGallonsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/windowsTextView"
        android:layout_alignStart="@id/windowsTextView"
        android:layout_alignLeft="@id/windowsTextView"
        android:padding="8dp"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:text="@string/compute_button_text"
        android:elevation="4dp"
        android:onClick="computeGallons" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/windowsTextView"
        android:layout_alignEnd="@id/windowsEditText"
        android:layout_alignRight="@id/windowsEditText"
        android:padding="8dp"
        android:textSize="14sp"
        android:layout_alignBaseline="@id/computeGallonsButton"
        android:text="@string/help_button_text"
        android:elevation="4dp"
        android:onClick="goToHelp" />

    <TextView
        android:id="@+id/gallonsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/computeGallonsButton"
        android:layout_marginTop="70dp"
        android:textSize="20sp"
        android:text="@string/gallons" />


</RelativeLayout>
